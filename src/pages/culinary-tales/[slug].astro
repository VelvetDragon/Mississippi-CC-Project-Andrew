---
import Layout from '../../layouts/Layout.astro';
import { getBlogBySlug, getAllPublishedBlogs } from '../../data/blogs.js';

// For server mode, we need to handle the slug dynamically
export const prerender = false; // Make this route server-rendered

const slug = Astro.params.slug;
let blog = null;

if (slug) {
  // Get all blogs and find the one matching the slug
  const allBlogs = await getAllPublishedBlogs();
  blog = allBlogs.find(b => b.slug === slug);
}

if (!blog) {
  return Astro.redirect('/404');
}

// Format date
const formattedDate = new Date(blog.date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<Layout title={`${blog.title} - Culinary Tales`}>
  <!-- Hero Section with Blog Background -->
  <section class="blog-hero" style={`background-image: url('${blog.backgroundImage}')`}>
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <div class="breadcrumb">
        <a href="/culinary-tales">Culinary Tales</a>
        <span class="separator">→</span>
        <span class="current">{blog.title}</span>
      </div>
      <h1>{blog.title}</h1>
      <div class="blog-meta">
        <span class="date">{formattedDate}</span>
        <span class="separator">•</span>
        <span class="category">{blog.category}</span>
        <span class="separator">•</span>
        <span class="author">By {blog.author}</span>
      </div>
    </div>
  </section>

  <div class="blog-content">
    <div class="content-container">
      <!-- Blog Summary -->
      <div class="blog-summary">
        <p class="excerpt">{blog.excerpt}</p>
      </div>

      <!-- Blog Content -->
      <article class="blog-article">
        <div class="article-content" set:html={blog.content}></div>
      </article>

      <!-- Navigation -->
      <div class="blog-navigation">
        <a href="/culinary-tales" class="back-link">
          ← Back to Culinary Tales
        </a>
      </div>
    </div>
  </div>
</Layout>

<style>
  /* Blog Hero Section */
  .blog-hero {
    position: relative;
    height: 60vh;
    min-height: 400px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg, 
      rgba(0, 0, 0, 0.7) 0%, 
      rgba(0, 0, 0, 0.4) 50%, 
      rgba(0, 0, 0, 0.6) 100%
    );
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    color: white;
    max-width: 900px;
    padding: 0 2rem;
  }

  .breadcrumb {
    font-size: 0.9rem;
    margin-bottom: 1rem;
    opacity: 0.9;
  }

  .breadcrumb a {
    color: white;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .breadcrumb a:hover {
    opacity: 0.8;
    text-decoration: underline;
  }

  .separator {
    margin: 0 0.5rem;
    opacity: 0.7;
  }

  .current {
    opacity: 0.8;
  }

  .hero-content h1 {
    font-family: 'Playfair Display', serif;
    font-size: 3.5rem;
    font-weight: 700;
    margin: 0 0 1.5rem 0;
    line-height: 1.2;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  .blog-meta {
    font-size: 1rem;
    opacity: 0.9;
    font-weight: 500;
  }

  /* Blog Content */
  .blog-content {
    background: white;
    margin-top: -100px;
    position: relative;
    z-index: 3;
    border-radius: 20px 20px 0 0;
    padding-top: 4rem;
  }

  .content-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem 4rem 2rem;
  }

  /* Blog Summary */
  .blog-summary {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border);
  }

  .excerpt {
    font-size: 1.2rem;
    line-height: 1.7;
    color: var(--text-muted);
    font-style: italic;
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  /* Article Content */
  .blog-article {
    margin-bottom: 3rem;
  }

  .article-content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--text-dark);
  }

  .article-content h3 {
    font-family: 'Playfair Display', serif;
    font-size: 1.8rem;
    font-weight: 600;
    color: var(--text-dark);
    margin: 2.5rem 0 1rem 0;
    line-height: 1.3;
  }

  .article-content p {
    margin-bottom: 1.5rem;
  }

  .article-content p:first-child {
    font-size: 1.15rem;
    color: var(--text-dark);
  }

  /* Navigation */
  .blog-navigation {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--primary-color);
    color: white;
    text-decoration: none;
    padding: 1rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 2px 10px rgba(200, 118, 61, 0.2);
  }

  .back-link:hover {
    background: var(--primary-dark);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(200, 118, 61, 0.3);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .blog-hero {
      height: 50vh;
      min-height: 350px;
    }

    .hero-content h1 {
      font-size: 2.5rem;
    }

    .hero-content {
      padding: 0 1rem;
    }

    .blog-meta {
      font-size: 0.9rem;
    }

    .content-container {
      padding: 0 1rem 3rem 1rem;
    }

    .article-content {
      font-size: 1rem;
    }

    .article-content h3 {
      font-size: 1.5rem;
    }

    .excerpt {
      font-size: 1.1rem;
    }

    .blog-content {
      margin-top: -50px;
      border-radius: 15px 15px 0 0;
      padding-top: 3rem;
    }
  }

  @media (max-width: 480px) {
    .hero-content h1 {
      font-size: 2rem;
    }

    .breadcrumb {
      font-size: 0.8rem;
    }

    .blog-meta {
      font-size: 0.85rem;
    }

    .back-link {
      padding: 0.875rem 1.5rem;
      font-size: 0.9rem;
    }
  }
</style>
