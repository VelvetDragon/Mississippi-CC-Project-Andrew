  // Handle collapsible essay sections with smooth animations
  document.addEventListener('DOMContentLoaded', () => {
    // Function to toggle collapsible content
    const toggleCollapsible = (controlsId: string | null) => {
      if (!controlsId) return;
      const content = document.getElementById(controlsId);
      if (!content) return;
      
      const topToggle = document.querySelector(`.essay-toggle[aria-controls="${controlsId}"]`);
      if (!topToggle) return;
      
      const isExpanded = topToggle.getAttribute('aria-expanded') === 'true';
      const newExpandedState = !isExpanded;
      
      // Update aria attributes
      topToggle.setAttribute('aria-expanded', String(newExpandedState));
      content.setAttribute('aria-hidden', String(!newExpandedState));
      
      if (newExpandedState) {
        // Expand: measure content height and animate to it
        content.hidden = false;
        const height = content.scrollHeight;
        content.style.height = '0px';
        
        // Force reflow to ensure height: 0 is applied
        void content.offsetHeight;
        
        requestAnimationFrame(() => {
          content.style.height = `${height}px`;
          
          // After animation completes, set to auto for responsive behavior
          setTimeout(() => {
            if (content.getAttribute('aria-hidden') === 'false') {
              content.style.height = 'auto';
            }
          }, 300);
        });
      } else {
        // Collapse: animate to 0, then hide
        const height = content.scrollHeight;
        content.style.height = `${height}px`;
        
        // Force reflow
        void content.offsetHeight;
        
        requestAnimationFrame(() => {
          content.style.height = '0px';
          
          setTimeout(() => {
            content.hidden = true;
            content.style.height = '';
          }, 300);
        });
      }
    };
    
    // Handle top toggle buttons
    const essayToggles = document.querySelectorAll('.essay-toggle');
    essayToggles.forEach(toggle => {
      toggle.addEventListener('click', () => {
        const controlsId = toggle.getAttribute('aria-controls');
