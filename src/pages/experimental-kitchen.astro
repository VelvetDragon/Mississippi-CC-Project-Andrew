<style>
  /* Hero Section */
  .hero {
    position: relative;
    height: 35vh;
    min-height: 300px;
    background-image: url('/images/kitchen-bg.jpeg') !important;
    background-size: cover;
    background-position: center 16.75%;
    background-repeat: no-repeat;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    color: white;
  }

  .hero-content h1 {
    font-family: 'Playfair Display', serif;
    font-size: 4rem;
    font-weight: 600;
    margin: 0;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  /* Main Content */
  .content {
    max-width: 800px;
    margin: 0 auto;
    padding: 4rem 2rem 0;
  }

  .main-text {
    margin-bottom: 4rem;
  }

  .main-text h2 {
    font-family: 'Playfair Display', serif;
    font-size: 1.8rem;
    color: var(--text-dark);
    margin-bottom: 1rem;
    margin-top: 0.5rem;
    font-weight: 600;
    text-align: left;
  }

  .main-text h3 {
    font-family: 'Playfair Display', serif;
    font-size: 1.5rem;
    color: var(--text-dark);
    margin-bottom: 1rem;
    margin-top: 0.5rem;
    font-weight: 600;
    text-align: left;
  }

  .main-text p {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--text-dark);
    margin-bottom: 1.5rem;
    text-align: justify;
  }

  /* Professor Voice Styling */
  .professor-voice {
    background: var(--surface);
    padding: 1.5rem;
    border-radius: 8px;
    margin: 1.5rem 0;
    border-left: 4px solid var(--primary-color);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    font-style: italic;
  }

  .professor-voice p {
    margin: 0;
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--text-dark);
  }

  .chart-placeholder {
    background: var(--surface);
    padding: 1.5rem;
    border-radius: 8px;
    margin-top: 1rem;
    text-align: center;
    border: 1px solid var(--border);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .chart-placeholder p {
    margin-bottom: 0.5rem;
    font-size: 1rem;
  }

  .chart-placeholder p:first-child {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--primary-color);
  }

  .chart-placeholder em {
    color: #666;
    font-style: italic;
  }

  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: 3rem;
    }
    
    .content {
      padding: 3rem 1rem 0;
    }

    .main-text p {
      font-size: 1rem;
    }

    .professor-voice {
      padding: 1rem;
      margin: 1rem 0;
    }

    .chart-placeholder {
      padding: 1rem;
    }
  }

  @media (max-width: 480px) {
    .hero {
